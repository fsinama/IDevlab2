{% extends "layouts/triangle/base.html.twig" %}

{% block title %} RYP | Accueil {% endblock %}

{% block Home_Slider %}
    <section id="page-breadcrumb" class="f-banner">
        <div class="vertical-center sun">
            <div class="container">
                <div class="row">
                    <div class="action">
                        <div class="col-sm-12">
                            <h1 class="title">Report your bugs</h1>
                            <p>Garder une trace de vos erreur pour les résoudres plus vite.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{%  block Content %}
<div class="f-container">
    <input type="text" class="f-search-bar form-control" id="recherche-par-titre" placeholder="Recherche" >


        <div class="wrap-table100">
            <div class="table100 ver1 m-b-110">
                <div class="table100-head">
                    <table>
                        <thead>
                        <tr class="row100 head">
                            <th class="cell100 column1">ID</th>
                            <th class="cell100 column2">Intitulé</th>
                            <th class="cell100 column3">Technologie</th>
                            <th class="cell100 column4">Types</th>
                            <th class="cell100 column5">Etat</th>
                            <th class="cell100 column6">Ouverture</th>
                            <th class="cell100 column7">Fermeture</th>
                        </tr>
                        </thead>
                    </table>
                </div>

                <div class="table100-body js-pscroll">
                    <table>
                        <tbody id="list_reports">
                        {% for report in reportList %}
                            <tr class="row100 body">
                                <td class="cell100 column1">{{ report.id }}</td>
                                <td class="cell100 column2">{{ report.title }}</td>
                                <td class="cell100 column3">{{ report.technology.name }}</td>
                                <td class="cell100 column4">une liste des types</td>
                                {% if report.state %}
                                    <td class="cell100 column5"><img src="data:image/svg+xml;base64," /></td>
                                {% else %}
                                    <td class="cell100 column5"><img src="data:image/svg+xml;base64," /></td>
                                {% endif %}
                                <td class="cell100 column6">{{ report.openAt|date("d/m/Y") }}</td>
                                <td class="cell100 column7">{{ report.clausedAt|date("d/m/Y") }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block script %}
    <script>

        var table = $('#list_reports');
        var tableDefault = table.html();


        $(document).ready(function(){
            $('#recherche-par-titre').keyup(function (e){

                setTimeout(function(){ },5000)

                const recherche = $(this).val();

                if(recherche !== "" && (e.keyCode !==16 && e.keyCode !==17 && e.keyCode !==18)){
                    $.ajax({
                        type: 'GET',
                        url:    '{{ path('ryp_api_list') }}',
                        data: {title: recherche},
                        success: function (data){
                            if(data !== ""){

                                table.innerHTML = null;
                                table.html(
                                    data
                                ).fadeIn(10);
                                ps.update()

                            }
                        }
                    });
                }else{
                    table.html(tableDefault);
                }


            });
        });

    </script>
{% endblock %}